<div class="container-fluid border">

<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-row">
        <div class="form-group col-md-6">
          <label for="user_name">Nome</label>
          <%= form.text_field :name, id: :user_name, class: "form-control", placeholder: "Nome" %>
        </div>
        <div class="form-group col-md-6">
          <label for="user_cpf">CPF</label>  
          <%= form.text_field :cpf, id: :user_cpf, class: "form-control",  placeholder: "000.000.000-00" %>
        </div>
      </div>
    <div class="form-row">               
        <div id="date-form"class="form-group col-md-6">
          <label for="user_birthDate">Data de nascimento</label>   
          <div class="container">
          <%= form.date_select :birthDate, id: :user_birthDate %>
          </div>
        </div>
      <div class="form-group col-md-6">
        <label for="user_email">Email</label>
        <%= form.text_field :email, id: :user_email, class: "form-control",  placeholder:"example@example.com" %>
      </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="user_address">Endere√ßo</label>
            <%= form.text_field :address, id: :user_address, class: "form-control",  placeholder: "Rua exemplo" %>
          </div>
        <div class="form-group col-md-6">
          <label for="user_cellphone">Telefone</label>
          <%= form.text_field :cellphone, id: :user_cellphone, class: "form-control",  placeholder: "90011-0011" %>
        </div>
      </div>
  
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="input_state">State</label>
        <%= form.select(:user_state)  do %>
          <% [['Lisbon', 1], ['Madrid', 2], ['Berlin', 3]].each do |c| %>
            <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
        <% end %>
      </div>
      <div class="form-group col-md-6">
        <label for="user_city">City</label>
        <select id="user_city" name="user[city]" class="form-control">
            <option selected>Escolha...</option>
            <option value="Recife">Recife</option>
          </select>
      </div>
      <div class="form-group col-md-2">
        <label for="user_cep">Cep</label>
        <%= form.text_field :cep, id: :user_cep, class: "form-control",  placeholder: "00000-000" %>
      </div>
    </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>